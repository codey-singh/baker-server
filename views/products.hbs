<div class="order">
  <a href="#">
    {{title}}
  </a>
</div>
<main id="wrapper">
  <section>
    <div class="grid3">
      {{#each products}}
      <div>
        <h2>{{this.name}}</h2>
        <img src="img/{{this.image}}" alt="cake" />
        <br />
        <blockquote>${{this.price}}</blockquote>
        <p>
          {{this.desc}}
        </p>
        <form method="POST" action="/cart/addtocart">
          <input type="hidden" name="product_id" value="{{this._id}}">
          <button class="btn btn-outline-pink" data-id="{{this._id}}">Order Now</button>
        </form>
      </div>
      {{/each}}
    </div>
    <div class="load-more">
      <button class="btn btn-outline-pink-inverse">Load More...</button>
    </div>
  </section>
</main>